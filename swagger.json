      "patch": {
        "tags": ["Auth"],
        "summary": "Update current user info",
        "security": [{ "Bearer": [] }],
        "parameters": [],
        "requestBody": {
          "description": "Update user object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CurrentUserResponse"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentUserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (validation message)"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/auth/avatar": {
      "post": {
        "tags": ["Auth"],
        "summary": "Update avatar",
        "security": [{ "Bearer": [] }],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "image": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation"
          },
          "400": {
            "description": "The file must be an image"
          },
          "401": {
            "description": "Not authorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/notices/by-category/:category": {
      "post": {
        "tags": ["Notices"],
        "summary": "Notices by category",
        "parameters": [
          {
            "in": "path",
            "required": "true",
            "name": "category",
            "type": "string",
            "description": "Category"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoticesByCategoryResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/notices/certain/:noticeId": {
      "get": {
        "tags": ["Notices"],
        "summary": "Notices by category",
        "parameters": [
          {
            "in": "path",
            "required": "true",
            "name": "noticeId",
            "type": "string",
            "description": "noticeId"
          }
        ],
        "responses": {
          "200": {
