    "/api/notices/my-notices/:noticeId": {
      "delete": {
        "tags": ["Notices"],
        "summary": "Delete notice by id from my notices",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "in": "path",
            "required": "true",
            "name": "noticeId",
            "type": "string",
            "description": "noticeId"
          }
        ],
        "responses": {
          "204": {
            "description": "Successful operation"
